<div id="blog_<%= blog.id %>">
  <h3><%= blog.title%></h3>
  <h6><%= blog.created_at %></h6>
  <p><%= blog.body%></p>
  <div class="comment-buttons">
    <span><%= button_to blog.comments.count.to_s + " Comments", blog_comment_path(blog, blog.comments), method: :get, id: "comments_link", remote: true %></span>
    <span><%= button_to "Add Comment", new_blog_comment_path(blog.id), method: :get, id: "add_comment_link", remote: true %></span>
  </div>

  <% if user_admin %>
    <span><%= link_to 'Edit', edit_blog_path(blog) %> |</span>
    <span><%= link_to "Delete", blog_path(blog), :method => "delete", remote: true %></span>
  <% end %>

    <div class="comments">
    </div>
    
</div>
