<h1><%= @skill.name %></h1>

<span><%= link_to "Edit Skill", edit_skill_path(@skill) %></span>
<span><%= link_to "Delete Skill", skill_path(@skill), :data => {:confirm => "you sure you want to delete this skill?", :method => "delete"} %></span>

<% if @skill.tasks.any? %>
  <h4>Here are the tasks for this skill:</h4>

  <ul>
    <% @skill.tasks.each do |task| %>
      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@skill, task) %> |
        <%= link_to "Delete", list_task_path(@skill, task),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>

<p><%= link_to "Add a task", new_list_task_path(@skill) %></p>
<p><%= link_to "Delete List", list_path(@skill),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to homepage", skills_path %></p>
